generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // Vercel Postgres connection string
  directUrl = env("POSTGRES_URL_NON_POOLING") // Vercel Postgres direct connection string
}

model Comment {
  id          Int      @id @default(autoincrement())
  content     String
  userAddress String
  episodeId   Int
  createdAt   DateTime @default(now())
}